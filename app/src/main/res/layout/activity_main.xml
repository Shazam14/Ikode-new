<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:orientation="vertical"
    tools:context="ikona.ikode.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:background="@drawable/ic_ikodeglobe"
            android:layout_gravity="center_horizontal"
            android:contentDescription="Ikode Icon" />

        <com.devspark.robototextview.widget.RobotoTextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typeface="roboto_medium_italic"
            android:text="licensed by Ikona Â®"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="16sp"
            />
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="2"
                >


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan Code "
                    android:textAllCaps="false"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:drawableLeft="@drawable/ic_qrbig"
                    android:id="@+id/button1"
                    android:background="@drawable/button_shadow"
                     />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan RFID "
                    android:padding="4dp"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:textAllCaps="false"
                    android:drawableLeft="@drawable/ic_qrbig"
                    android:background="@drawable/button_shadow"
                    android:id="@+id/button"
                     />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan NFC "
                    android:padding="4dp"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:textAllCaps="false"
                    android:background="@drawable/button_shadow"
                    android:drawableLeft="@drawable/ic_qrbig"
                    android:id="@+id/button2" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <com.devspark.robototextview.widget.RobotoCheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not yet Registered ?"
                android:id="@+id/checkBox"
                app:typeface="roboto_light"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:checked="false"/>

            <com.devspark.robototextview.widget.RobotoTextView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:typeface="roboto_medium_italic"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:drawableRight="@drawable/ic_ikode_launch"
                android:text="Register now to get full access to Ikode SC Reader Settings and improved features."
                android:textStyle="bold"
                android:textSize="12sp"
                />

        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.devspark.robototextview.widget.RobotoTextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typeface="roboto_mono_medium"
            android:layout_gravity="center"
            android:text="HELP"
            android:drawableLeft="@drawable/ic__ikodehelp"
            android:gravity="left|center"
            android:layout_weight="1"
            android:textSize="16sp"
            />

        <com.devspark.robototextview.widget.RobotoTextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:typeface="roboto_mono_medium"
        android:layout_gravity="center"
        android:drawableRight="@drawable/ic_ikodeinfo"
        android:text="ABOUT"
        android:gravity="right|center"
        android:layout_weight="1"
        android:textSize="16sp"
        />

    </LinearLayout>



</LinearLayout>
