<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ikona.ikode.Privacy">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBGround"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.devspark.robototextview.widget.RobotoTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:typeface="roboto_medium"
                android:textSize="20sp"
                android:text="@string/scopeLabel"/>


            <com.devspark.robototextview.widget.RobotoTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:typeface="roboto_regular"
                android:textSize="16sp"
                android:text="@string/scopeText"/>


            <com.devspark.robototextview.widget.RobotoTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:typeface="roboto_medium"
                android:textSize="20sp"
                android:text="@string/definitionsLabel"/>

            <com.devspark.robototextview.widget.RobotoTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:typeface="roboto_regular"
                android:textSize="16sp"
                android:text="@string/definitionsText"/>


            <com.devspark.robototextview.widget.RobotoTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:typeface="roboto_medium"
                android:textSize="20sp"
                android:text="@string/highlightsLabel"/>

            <com.devspark.robototextview.widget.RobotoTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:typeface="roboto_bold"
                android:textSize="16sp"
                android:text="@string/highlightsText1"/>

            <com.devspark.robototextview.widget.RobotoTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:typeface="roboto_regular"
                android:textSize="16sp"
                android:text="@string/highlightsText2"/>


            <com.devspark.robototextview.widget.RobotoTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:typeface="roboto_bold"
                android:textSize="16sp"
                android:text="@string/highlightsText3"/>

            <com.devspark.robototextview.widget.RobotoTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:typeface="roboto_regular"
                android:textSize="16sp"
                android:text="@string/highlightsText4"/>

            <com.devspark.robototextview.widget.RobotoTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:typeface="roboto_bold"
            android:textSize="16sp"
            android:text="@string/highlightsText5"/>

            <com.devspark.robototextview.widget.RobotoTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:typeface="roboto_bold"
                android:textSize="16sp"
                android:text="@string/highlightsText6"/>


            <com.devspark.robototextview.widget.RobotoTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:typeface="roboto_bold"
                android:textSize="16sp"
                android:text="@string/highlightsText7"/>

            <com.devspark.robototextview.widget.RobotoTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:typeface="roboto_regular"
                android:textSize="16sp"
                android:text="@string/highlightsText8"/>

            <com.devspark.robototextview.widget.RobotoTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:typeface="roboto_medium"
                android:textSize="20sp"
                android:text="@string/ikonaAddress"/>


            <com.devspark.robototextview.widget.RobotoTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:typeface="roboto_medium"
                android:textSize="15sp"
                android:text="@string/privacyInfo"/>


        </LinearLayout>




    </ScrollView>

</RelativeLayout>
